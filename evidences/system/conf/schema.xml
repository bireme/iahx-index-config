<?xml version="1.0" ?>
<schema name="bvs" version="1.1">
  <types>
    <fieldtype name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="boolean" class="solr.BoolField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="integer" class="solr.IntField" omitNorms="true"/>
    <fieldtype name="long" class="solr.LongField" omitNorms="true"/>
    <fieldtype name="float" class="solr.FloatField" omitNorms="true"/>
    <fieldtype name="double" class="solr.DoubleField" omitNorms="true"/>
    <fieldtype name="sint" class="solr.SortableIntField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="slong" class="solr.SortableLongField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="sfloat" class="solr.SortableFloatField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="sdouble" class="solr.SortableDoubleField" sortMissingLast="true" omitNorms="true"/>
    <fieldtype name="date" class="solr.DateField" sortMissingLast="true" omitNorms="true"/>

    <fieldtype name="text_ws" class="solr.TextField" positionIncrementGap="100">
      <analyzer>
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
      </analyzer>
    </fieldtype>

	<fieldtype name="decs" class="solr.TextField" omitNorms="false">
		<analyzer type="index" class="org.bireme.dia.analysis.DeCSAnalyzer"/>
		<analyzer type="query">
			<tokenizer class="solr.WhitespaceTokenizerFactory"/>
			<filter class="solr.ISOLatin1AccentFilterFactory"/>
			<filter class="solr.LowerCaseFilterFactory"/>
		</analyzer>
	</fieldtype>

	<fieldtype name="decs_simple" class="solr.TextField">
		<analyzer type="index" class="org.bireme.dia.analysis.DeCSSimpleAnalyzer"/>
		<analyzer type="query">
			<tokenizer class="solr.KeywordTokenizerFactory"/>
			<filter class="solr.ISOLatin1AccentFilterFactory"/>
			<filter class="solr.LowerCaseFilterFactory"/>
		</analyzer>
	</fieldtype>

	<fieldtype name="decs_code" class="solr.TextField" omitNorms="true">
		<analyzer type="index">
			<tokenizer class="solr.PatternTokenizerFactory" pattern="(\^d[0-9]+)" group="1"/>
			<filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
		</analyzer>
    </fieldtype>

	<fieldtype name="dateiso" class="solr.TextField">
		<analyzer type="index">
			<tokenizer class="solr.PatternTokenizerFactory" pattern="(^[0-9]{4})" group="1"/>
		</analyzer>
	</fieldtype>

    <fieldtype name="text" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
		<filter class="solr.ISOLatin1AccentFilterFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
		<filter class="solr.ISOLatin1AccentFilterFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="0" catenateNumbers="0" catenateAll="0"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldtype>

	<fieldtype name="text_with_decs" class="solr.TextField">
		<analyzer type="index" class="org.bireme.dia.analysis.BVSStandardAnalyzer"/>
		<analyzer type="query">
			<tokenizer class="solr.StandardTokenizerFactory"/>
			<filter class="solr.ISOLatin1AccentFilterFactory"/>            
			<filter class="solr.LowerCaseFilterFactory"/>
		</analyzer>
	</fieldtype>

	<fieldtype name="string_lower" class="solr.StrField">
		<analyzer>
			<tokenizer class="solr.LowerCaseTokenizerFactory"/>
		</analyzer>
	</fieldtype>

	<fieldtype name="ignored" stored="false" indexed="false" class="solr.StrField" />
 </types>

 <fields>
	<field name="id" type="string" indexed="true" stored="true"/>
	<field name="db" type="string" indexed="true" stored="true" multiValued="false"/>
	<field name="bvs" type="string" indexed="true" stored="true"/>
	<field name="type" type="string" indexed="true" stored="true" multiValued="true"/>
	<field name="au" type="text" indexed="true" stored="true" multiValued="true"/>
	<field name="ti" type="text" indexed="true" stored="true" multiValued="true"/>
	<field name="tl" type="string" indexed="true" stored="true" multiValued="true"/>
	<field name="fo" type="text" indexefd="false" stored="true" multiValued="true"/>
	<field name="la" type="string_lower" indexed="true" stored="true" multiValued="true"/>
	<field name="ur" type="string" indexed="false" stored="true" multiValued="true"/>
	<field name="ta" type="string" indexed="true" stored="true" multiValued="true"/>
	<field name="da" type="string" indexed="true" stored="true" multiValued="false"/>
	<field name="cp" type="string" indexed="true" stored="true"/>
	<field name="pg" type="string" indexed="false" stored="true" multiValued="true"/>
	<field name="ab" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
	<field name="co" type="text" indexed="true" stored="true" multiValued="true"/>
	<field name="dl" type="string" indexed="true" stored="false" multiValued="true" required="false"/>

	<field name="limit" type="text" indexed="true" stored="true" multiValued="true"/>
	<field name="crg" type="string" indexed="true" stored="true" multiValued="false" required="false"/>

   <!-- decs fields -->
   <field name="mh" type="decs" indexed="true" stored="true" multiValued="true"/>
   <field name="mj" type="decs_simple" indexed="true" stored="false" multiValued="true"/>
   <field name="ct" type="decs" indexed="true" stored="true" multiValued="true"/>

   <!-- guidelines -->
   <field name="objective" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="category" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="speciality" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="intended" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="target" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="outcome" type="text" indexed="true" stored="true" multiValued="true" required="false"/>
   <field name="practices" type="text" indexed="true" stored="true" multiValued="true" required="false"/>

   <!-- facet -->
   <field name="tag" type="string" indexed="true" stored="false" multiValued="true"/>
   <field name="subject" type="decs_code" indexed="true" stored="false" multiValued="true" required="false"/>
   <field name="year" type="dateiso" indexed="true" stored="false"/>

   <!-- catchall field, containing all other searchable text fields (implemented
        via copyField further on in this schema  -->
   <field name="tw" type="text_with_decs" indexed="true" stored="false" multiValued="true"/>

   <!-- Dynamic field definitions -->
   <dynamicField name="ab_*"  type="text" indexed="false" stored="true"  multiValued="true"/>
   <dynamicField name="*" type="ignored" multiValued="true" />
 </fields>

 <!-- field to use to determine and enforce document uniqueness. -->
 <uniqueKey>id</uniqueKey>

 <!-- field for the QueryParser to use when an explicit fieldname is absent -->
 <defaultSearchField>tw</defaultSearchField>

 <!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
 <solrQueryParser defaultOperator="AND"/>

 <copyField source="id" dest="tw"/>
 <copyField source="ti" dest="tw"/>
 <copyField source="au" dest="tw"/>
 <copyField source="year" dest="tw"/>
 <copyField source="limit" dest="tw"/>
 <copyField source="ab" dest="tw"/>
 <copyField source="ab_*" dest="tw"/>
 <copyField source="ct" dest="tw"/>
 <copyField source="mj" dest="tw"/>
 <copyField source="mh" dest="tw"/>

 <copyField source="category" dest="tw"/>
 <copyField source="intended" dest="tw"/>
 <copyField source="objective" dest="tw"/>
 <copyField source="speciality" dest="tw"/>
 <copyField source="target" dest="tw"/>
 <copyField source="outcome" dest="tw"/>

 <copyField source="ct" dest="mh"/>
 <copyField source="mj" dest="mh"/>
 <copyField source="mj" dest="subject"/>
 <copyField source="da" dest="year"/>
 
</schema>
